

<div class="container rounded bg-aquamarine mt-5 mb-5" style="background-color:#9edec6;">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
              <div class="circle">
                <% if @user.avatar? %>
                    <%= image_tag(@user.avatar_url(:thumb), style:"width:150px; height:200px; height:auto;")%>
                <% else %>
                    <%= image_tag("https://cdn3.iconfinder.com/data/icons/flaticons-1/24/flaticon_user-512.png", style:"width:150px; height:200px; height:auto;   border-radius: 50%;")%>
                <% end %>
              </div>

              <br>
              <span class="font-weight-bold">username</span>
              <span class="text-black-50"><%= @user.email %></span>
              <br>
              <span class="font-weight-bold">ranks</span>
              <span><%= @user.roles.pluck(:name)%></span>

              <br>
              <% if @user == current_user %>
                

                <%
=begin%>
 <button id="phones_index" class="btn btn-success">My Phone Numbers</button> 
<%
=end%>
                <%= render "phone_numbers/index"%> 

                <br>
                <button id="places_index" class="btn btn-success">My Place Addresses</button>
                <%= render "places/index"%>
                <%= render "charges/new"%>
               <% end %>
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">User Profile</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">Name</label><input type="text" class="form-control" placeholder="first name" value=""></div>
                    <div class="col-md-6"><label class="labels">Surname</label><input type="text" class="form-control" value="" placeholder="surname"></div>
                </div>
                <div class="row mt-3">
                    <%
=begin%>
 <div class="col-md-12"><label class="labels">Mobile Number</label><input type="text" class="form-control" placeholder=<%= @user.phone_numbers.first.number%> value=""></div>
                    <div class="col-md-12"><label class="labels">Address Line 1</label><input type="text" class="form-control" placeholder=<%= @user.places.first.name %> value=""></div> 
<%
=end%>
                    <div class="col-md-12"><label class="labels">Address Line 2</label><input type="text" class="form-control" placeholder="enter address line 2" value=""></div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Country</label><input type="text" class="form-control" placeholder="country" value=""></div>
                    <div class="col-md-6"><label class="labels">State/Region</label><input type="text" class="form-control" value="" placeholder="state"></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-3 py-5">
                <% if current_user == @user %>
                  <div class="d-flex justify-content-between align-items-center">
                    <span></span>
                    <span class="border px-3 p-1">
                      <i class="fa fa-plus">
                      </i> <%= link_to "Edit Account", edit_user_registration_path %>
                    </span>
                    <span>
                      <%= link_to "Add Info", info_path(current_user) %>
                    <span>
                  </div>
                  <br>
                <% end %>
                <h4 style="text-align:center;">User Posts</h4>
                <% @user.posts.each do |post| %>
                  <div class = "post" style="padding-top:30px; text-align:center;">
                    <h2>
                      <%= link_to post.title, post %>
                    </h2>
                  </div>
                  <% end %>
            </div>
        </div>
    </div>
</div>
</div>
</div>


