<section>
  <div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5" >
        <div class="card text-black" style="background-color:aquamarine">
          <div class="card-body p-5 text-center" >
            <div class="mb-md-5 mt-md-4 pb-5">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <h2 class="fw-bold mb-2 text-uppercase"><%= t(:sign_up) %></h2>
                    <div class="form-outline form-white mb-4">
                      <%= f.label t(:email) %><br>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </div>

                    <div class="form-outline form-white mb-4">
                      <%= f.label t(:password) %>
                      <br>
                      <%= f.password_field :password, autocomplete: "new-password", placeholder:"Min 6 characters" %>
                    </div>
                    
                    <div class="form-outline form-white mb-4">
                      <%= f.label t(:password_confirmation) %>
                      <br>
                      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </div>
                    <button class="btn btn-success" type="submit"><%= t(:sign_up)%></button>
               <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>