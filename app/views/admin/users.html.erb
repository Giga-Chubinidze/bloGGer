<div class="container">
    <h1 class="text-center">Admin</h1>
    <%= render "admin/nav_links"%>
    <br>
    <table class="table table-striped" style="background-color:#59D18D;">
        <thead>
            <tr>
                <th scope="col"><%= t(:ID)%></th>
                <th scope="col"><%= t(:email)%></th>
                <th scope="col"><%= t(:posts)%></th>
                <th scope="col"><%= t(:comments)%></th>
                <th scope="col"><%= t(:ranks)%></th>
                <th scope="col"><%= t(:delete_account)%></th>
            </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <th scope="row"><%= user.id %></th>
                    <td><%= link_to user.email, profile_path(user) %></td>
                    <td><%= pluralize(user.posts.count, "Post") %></td>
                    <td><%= pluralize(user.comments.count, "Comment")%></td>
                    <td><%= user.roles.pluck(:name)%>
                    <td><%= button_to t(:delete), admin_user_destroy_path(user), method: :delete,  class:"btn btn-danger" %></td>
                <tr>
            <% end %>
        </tbody>
    </table>
</div>
