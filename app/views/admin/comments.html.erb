<div class="container">
    <h1 class="text-center">Admin</h1>
    <%= render "admin/nav_links"%>
    <br>
    <table class="table table-striped" style="background-color:#59D18D;">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Body</th>
                <th scope="col">Author</th>
                <th scope="col">Post</th>
                <th scope="col">Delete Comment</th>
            </tr>
        </thead>
        <tbody>
            <% @comments.each do |comment| %>
                <tr>
                    <th scope="row"><%= comment.id %></th>
                    <td><%= comment.body.truncate(20) %></td>
                    <td><%= comment.user.email%></td>
                    <td><%= link_to comment.post.title, post_path(comment.post)%></td>
                    <td><%= button_to "Delete", admin_comment_destroy_path(comment), method: :delete,  class:"btn btn-danger"%></td>
                <tr>
            <% end %>
        </tbody>
    </table>
</div>
